#!/bin/sh

ANSIBLE_VERSION='2.10.7'
ANSIBLE_LINT_VERSION='5.1.3'

docker buildx build \
  --pull \
  --push \
  --provenance=false \
  --build-arg ANSIBLE_VERSION \
  --build-arg ANSIBLE_LINT_VERSION \
  --build-arg BUILD_DATE="$(date '+%FT%T.%s%z')" \
  --platform=linux/arm64,linux/amd64,linux/arm/v7 \
  -t "pad92/ansible-alpine:${ANSIBLE_VERSION}-2" \
  -t "registry.gitlab.com/pad92/docker-ansible-alpine:${ANSIBLE_VERSION}-2" \
  .
